@include /usr/share/policy/crosvm/common_device.policy

# Syscalls used by power_monitor's powerd implementation.
clock_getres: 1
connect: 1
getcwd: 1
getegid: 1
geteuid: 1
getrandom: 1
getresgid: 1
getresuid: 1
getsockname: 1
openat: 1
readlink: 1
socket: arg0 == AF_UNIX
tgkill: 1
prctl: arg0 == PR_SET_NAME
